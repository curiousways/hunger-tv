<p><mark>video.twig</mark></p>

{% if item.embed_url or item.poster %}
	<section>
		<div class="row">
			<div class="col">
				{% if item.type == 'embed' %}
					{% include 'includes/embed.twig' with { embed: item.embed_url } %}
				{% else %}
					{# HTV Player (legacy, no idea what it's meant to do) #}
					{% include 'includes/image.twig' with { image: item.poster } %}
				{% endif %}
			</div>
		</div>
	</section>
{% endif %}
