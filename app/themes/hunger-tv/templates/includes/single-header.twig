<header>
	<div class="row">
		<div class="col lg:6">
			<div class="uppercase">
				{% for item in post.terms('section') %}
					<a href="{{ item.link }}">{{ item.name }}</a>
				{% endfor %}
			</div>
			<div>{{ post.date|date }}</div>
		</div>
		<div class="col lg:6">
			{% include 'includes/share.twig' %}
		</div>
	</div>
	<div class="row">
		<div class="col lg:8 lg:offset-2">
			<h1>{{ post.title }}</h1>
			<h2><code>post.standfirst</code><br>{{ post.standfirst }}</h2>
			<h2><code>post.article_excerpt</code><br>{{ post.article_excerpt }}</h2>
		</div>
	</div>
</header>
