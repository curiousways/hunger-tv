<div class="hero" role="banner">
	<img
		src="https://via.placeholder.com/1920x800"
		class="hero__image"
		alt=""
		loading="lazy"
	/>
	<div class="hero__logo">
		<div class="row">
			<div class="col">
				{% include 'icons/hunger_logo.svg' %}
			</div>
		</div>
	</div>
	<h2>{{ article.title }}</h2>
	{% for category in article.terms('section') %}
		<a href="{{ category.link }}">{{ category.name }}</a>
	{% endfor %}
</div>
