<picture class="hero__image">
	<source
		media="(max-width: 599px)"
		srcset="{{ image.src('portrait--large') }}"
	>
	<source
		media="(min-width: 600px)"
		srcset="{{ image.src('hero') }}"
	>
	<img
		src="{{ image.src('hero') }}"
		alt="{{ image.alt }}"
		loading="lazy"
	/>
</picture>
