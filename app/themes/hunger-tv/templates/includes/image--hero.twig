<picture class="hero__image">
	<source
		media="(max-width: 599px)"
		srcset="{{ image.src('portrait') }}, {{ image.src('portrait--large') }} 2x"
	>
	<source
		media="(min-width: 600px) and (max-width: 1023px)"
		srcset="{{ image.src|resize(1023, 830) }}"
	>
	<source
		media="(min-width: 1024px)"
		srcset="{{ image.src|resize(1920, 830) }}"
	>
	<img
		src="{{ image.src|resize(1920, 830) }}"
		alt="{{ image.alt }}"
	/>
</picture>
