{% extends "base.twig" %}

{% block content %}

	<article class="issue">

		{# <header>
			<div class="row">
				<div class="col">
					<a href="{{ fn('get_post_type_archive_link', 'issue') }}">Shop</a> - {{ post.buy_now_title ? post.buy_now_title : post.title }}
				</div>
			</div>
		</header> #}

			<div class="row">
				<div class="col lg:4">
					{% include 'includes/image.twig' with {
						image: post.thumbnail,
						size: 'portrait'
					} %}
				</div>
				<div class="col lg:8">
					<header>
						<h1>{{ post.title }}</h1>
						{% if post.post_excerpt %}
							<p class="beta">{{ post.post_excerpt }}</p>
						{% endif %}
					</header>
					{% if post.content %}
						<div class="rte">
							{{ post.content }}
						</div>
					{% endif %}
					{% if post.buy_now_url %}
						<a
							href="{{ post.buy_now_url }}"
							class="button"
							target="_blank"
							rel="noopener"
						>
							Buy now
							{% include 'icons/external-link.svg' %}
						</a>
					{% endif %}
					{% include 'includes/share.twig' %}
				</div>
			</div>
		</header>

	</article>

	{% for issue in latest_issue %}
		{% if issue.id != post.id %}
			<section>
				<h2><a href="{{ issue.link }}">{{ issue.title }} - Latest Magazine</a></h2>
			</section>
		{% endif %}
	{% endfor %}

{% endblock %}
