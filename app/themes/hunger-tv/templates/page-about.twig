{% extends "base.twig" %}

{% block content %}

	{% include 'includes/page-header.twig' %}
	{% include 'includes/page-builder.twig' %}

	{% for department in departments %}
		<section>
			<div class="row">
				<div class="col lg:8 lg:offset-2">

					<h2 class="gamma">{{ department.name }}</h2>

					{% for member in department.posts('orderby=menu_order&order=ASC') %}
						{% if member.position %}
							<p class="grey no-margin">{{ member.position }}</p>
						{% endif %}
						<h3 class="base">{{ member.title }}</h3>
					{% endfor %}

				</div>
			</div>
		</section>
	{% endfor %}

{% endblock %}
