<form
	action="{{ site.link }}"
	method="get"
	class="form"
	role="search"
>

	<div class="input input--button">
		<input
			type="text"
			name="s"
			value="{{ fn('get_search_query') }}"
			placeholder="Search"
			aria-label="Search"
			required
		/>
		<button
			type="submit"
			aria-label="Submit"
		>{% include "icons/search.svg" %}</button>
	</div>

</form>
