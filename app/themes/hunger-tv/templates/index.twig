{% extends "base.twig" %}

{% block content %}

	{% for post in posts|slice(0, 1) %}
		{% include 'includes/hero--article.twig' with { article: post } %}
	{% endfor %}

	{% if fn('is_tag') %}
		<header>
			<div class="row">
				<div class="col">
					<h1>{{ title }}</h1>
				</div>
			</div>
		</header>
	{% else %}
		<h1 class="visually-hidden">{{ title }}</h1>
	{% endif %}

	<section>
		<div class="row">
			{% if posts is not empty %}
				{% for post in posts %}
					<div class="col md:6 lg:4">
						{% include ['includes/card--' ~ post.post_type ~ '.twig', 'includes/card.twig'] %}
					</div>
				{% endfor %}
				<div class="col">
					{% include 'includes/pagination.twig' with {
						pagination: posts.pagination({
							show_all: false,
							mid_size: 3,
							end_size: 2
						})
					} %}
				</div>
			{% else %}
				<div class="col">
					<p><em>Sorry, there's nothing to see here at the moment.</em></p>
				</div>
			{% endif %}
		</div>
	</section>

{% endblock %}
