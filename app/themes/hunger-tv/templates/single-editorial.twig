{% extends "base.twig" %}

{% block content %}

	<article>

		{% if post.hero_image %}
			{% include 'includes/hero.twig' with { image: post.hero_image } %}
		{% elseif post.thumbnail %}
			{% include 'includes/hero.twig' with { image: post.thumbnail } %}
		{% endif %}

		{% include 'includes/single-header.twig' %}
		{% include 'includes/article-builder.twig' %}
		{% include 'includes/single-footer.twig' %}

		<section>
			<div class="row">
				<div class="col center">
					<h2>Related Content</h2>
				</div>
			</div>
			<div class="row">
				{% for post in related %}
					<div class="col md:6 lg:4">
						{% include ['includes/card--' ~ post.post_type ~ '.twig', 'includes/card.twig'] %}
					</div>
				{% endfor %}
			</div>
		</section>

	</article>

{% endblock %}
