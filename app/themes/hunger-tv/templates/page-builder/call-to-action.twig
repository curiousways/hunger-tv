<section>
	<div class="row">

		<div class="col md:6 lg:8">
			{% include 'includes/image.twig' with { size: 'grid--two-thirds' } %}
		</div>

		<div class="col md:6 lg:4">
			<h2>{{ item.title }}</h2>
			{% if item.body %}
				<div class="rte">
					{{ item.body }}
				</div>
			{% endif %}
			<a
				href="{{ item.button.link}}"
				class="button"
				{{ item.button.target ? 'target="' ~ item.button.target ~ '"' }}
			>{{ item.button.title }}</a>
		</div>

	</div>
</section>
