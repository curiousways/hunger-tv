<!DOCTYPE html>
<html class="no-js{{ fn('is_front_page') ? ' no-scroll' }}" {{ site.language_attributes }}>

	<head>
		<meta charset="{{ site.charset }}">
		<meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, minimal-ui">
		<meta name="author" content="Curious Ways">
		<meta name="theme-color" content="{{ home.background_colour }}">

		<style>
			@font-face {
				font-family: 'Founders Grotesk Text';
				src: url("{{ fn('get_template_directory_uri') }}/assets/fonts/founders-grotesk-text-web-regular.woff2") format('woff2'),
					 url("{{ fn('get_template_directory_uri') }}/assets/fonts/founders-grotesk-text-web-regular.woff") format('woff');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}
		</style>

		{{ function('wp_head') }}

	</head>

	<body class="{{ body_class }} {{ home.copy_colour }}">

		{% include 'header.twig' %}

		<main>
			{% block content %}Sorry, no content{% endblock %}
		</main>

		{% include 'footer.twig' %}
		{{ function('wp_footer') }}

	</body>
</html>
