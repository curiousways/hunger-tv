<section>

	{% if item.title %}
		<div class="row">
			<div class="col">
				<h2>{{ item.title }}</h2>
			</div>
		</div>
	{% endif %}

	<div class="row">
		{% for post in item.cards %}
			<div class="col md:6 lg:4">
				{% include ['includes/card--' ~ post.post_type ~ '.twig', 'includes/card.twig'] %}
			</div>
			{% set ignore_ids = ignore_ids|merge([post.id]) %}
		{% endfor %}
	</div>

</section>
