<p><mark>pullquote.twig</mark></p>

{% if item.pullquote %}
	<section>
		<div class="row">
			<div class="col lg:9 lg:offset-2">

				<blockquote>
					{{ item.pullquote|wpautop }}
				</blockquote>

				{% if item.add_tweet_this_quote == 'yes' %}

					{% set quote = item.pullquote %}
					{% set quote = quote|length > 140 ? quote|slice(0, 137) ~ '...' : quote %}

					<a
						href="https://twitter.com/intent/tweet?text={{ quote|url_encode }}&url={{ post.link|url_encode }}&via={{ options.twitter }}"
						target="_blank"
						rel="noopener"
					>Retweet this quote</a>

				{% endif %}

			</div>
		</div>
	</section>
{% endif %}
