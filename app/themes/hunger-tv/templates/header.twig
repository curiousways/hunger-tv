<header id="drawer">

	<a
		href="{{ site.link }}"
		class="logo"
	>
		<img
			src="{{ fn('asset', 'images/hunger-logo-white@2x.png') }}"
			alt="{{ site.name }} logo"
			loading="lazy"
		/>
	</a>

	<button id="drawer__close">{% include 'icons/close.svg' %}</button>

	<a href="/shop/" class="button full">Shop</a>

	{% include 'forms/search.twig' %}

	<nav>
		{% include "includes/menu.twig" with { items: header_navigation.get_items } %}
	</nav>

	{% include 'includes/social.twig' %}

</header>
