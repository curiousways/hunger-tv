<header id="drawer" class="open">

	<a
		href="{{ site.link }}"
		class="logo"
	>
		<img
			src="{{ fn('asset', 'images/hunger-logo-white@2x.png') }}"
			alt="{{ site.name }} logo"
			loading="lazy"
		/>
	</a>
	
	<button
		id="drawer__toggle"
		class="hamburger hamburger--collapse is-active"
		aria-label="Menu"
	>
		<span class="hamburger-box">
			<span class="hamburger-inner"></span>
		</span>
	</button>

	<a href="/shop/" class="button button--full">Shop</a>

	{% include 'forms/search.twig' %}

	<nav>
		{% include "includes/menu.twig" with { items: header_navigation.get_items } %}
	</nav>

	{% include 'includes/social.twig' %}

</header>
